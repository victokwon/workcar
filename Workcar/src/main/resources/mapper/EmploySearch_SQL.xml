<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="EmploySearch">
	<select id="getEmpSch1Cnt" parameterType="hashmap" resultType="Integer">
		SELECT COUNT(*) AS CNT
		FROM EMP_ANNC  EA INNER JOIN SECTOR S
		    ON EA.SECTOR_NO = S.SECTOR_NO
		    INNER JOIN C_SECTOR CS
		    ON S.SECTOR_NO = CS.SECTOR_NO
		    INNER JOIN C_INFO CI
		    ON CS.CORP_NO = CI.CORP_NO
		WHERE DEL_CHK = 0
       <!--  <if test="searchTxt != null and searchTxt != ''">
