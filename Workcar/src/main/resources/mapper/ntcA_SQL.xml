<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="space">
	 	<select id="getACnt" parameterType="hashmap" resultType="Integer">
		SELECT COUNT(*) AS CNT
		FROM NOTICE N INNER JOIN MEMBER M
                  ON N.MEM_NO = M.MEM_NO
		WHERE N.DEL_CHK = 0
		<if test="searchTxt != null and searchTxt != ''">
			<choose>
				<when test="searchGbn eq 0"> <!-- 구분 -->
					AND N.NOTICE_GBN LIKE '%' || #{searchTxt} || '%'
				</when>
				<when test="searchGbn eq 1"> <!-- 제목 -->
					AND N.NOTICE_TITLE LIKE '%' || #{searchTxt} || '%'
				</when>
				<when test="searchGbn eq 2"> <!-- 작성자 -->
					AND M.NAME LIKE '%' || #{searchTxt} || '%'
				</when>
			</choose>
		</if>
	</select> 
	 
	<select id="getAList" parameterType="hashmap" resultType="hashmap">
      SELECT N.NOTICE_NO, N.NOTICE_GBN, N.NOTICE_TITLE, N.NAME, N.REG_DATE
      FROM(SELECT N.NOTICE_NO, N.NOTICE_GBN, N.NOTICE_TITLE, M.NAME, TO_CHAR(N.REG_DATE,'YYYY-MM-DD') AS REG_DATE,
         ROW_NUMBER() OVER(ORDER BY N.NOTICE_NO DESC) AS RNUM
           FROM NOTICE N INNER JOIN MEMBER M
                  ON N.MEM_NO = M.MEM_NO
                  WHERE N.DEL_CHK = 0
      <if test="searchTxt != null and searchTxt != ''">
         <choose>
				<when test="searchGbn eq 0"> <!-- 구분 -->
					AND N.NOTICE_GBN LIKE '%' || #{searchTxt} || '%'
				</when>
				<when test="searchGbn eq 1"> <!-- 제목 -->
					AND N.NOTICE_TITLE LIKE '%' || #{searchTxt} || '%'
				</when>
				<when test="searchGbn eq 2"> <!-- 작성자 -->
					AND M.NAME LIKE '%' || #{searchTxt} || '%'
				</when>
			</choose>
      </if>
      ) N
      WHERE N.RNUM BETWEEN #{startCnt} AND #{endCnt}
	</select>
